<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wallet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--PAY LAYOUT-->
    <LinearLayout
        android:id="@+id/pay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="46dp"
            android:gravity="center"
            android:text="Wallet"
            android:textColor="@color/darkGreen"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="?android:textColorPrimary"
                    android:text="Send"
                    android:textSize="30sp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/send"
                    app:backgroundTint="@color/white"
                    app:tint="@color/darkRed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="?android:textColorPrimary"
                    android:text="Request"
                    android:textSize="30sp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:src="@drawable/receive_coin"
                    app:backgroundTint="@color/white"
                    app:tint="#6200EA" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--PAY LOADING-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#61000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="-32dp"
            android:indeterminate="true"
            android:indeterminateTint="?colorPrimary"
            android:indeterminateTintMode="src_atop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Please Wait"
            android:textSize="26sp"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--CREATE WALLET-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pay_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="?android:textColorPrimary"
                android:text="Open HowFar account"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/create_wallet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:foreground="@drawable/gray_ripple"
                android:text="Create a wallet"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:textColor="?android:textColorPrimary"
                    android:text="Create"
                    android:textSize="24sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/pay_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--WALLET INPUT-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wallet_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textColor="?android:textColorPrimary"
                android:text="Create a wallet"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/bvn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:hint="Bank Verification Number"
                android:inputType="number"
                android:maxLines="1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@color/napier_green"
                android:textColor="?android:textColorPrimary"
                android:foreground="@drawable/gray_ripple"
                android:hint="Date of birth - 01-01-98"
                android:paddingHorizontal="6dp"
                android:paddingVertical="6dp"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                android:text="Create a wallet"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:textColor="?android:textColorPrimary"
                    android:paddingVertical="6dp"
                    android:text="Create account"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ImageView
            android:id="@+id/wallet_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>